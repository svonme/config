{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "lib": ["es2015", "es2016", "es2017", "scripthost"],
    "typeRoots": ["./node_modules/@types/", "./typings/"],
    "moduleResolution": "node"
  },
  "include": [
    "./src/*.ts"
  ],
  "exclude": [
    "./build",
    "./node_modules",
    "./tsconfig.json"
  ]
}